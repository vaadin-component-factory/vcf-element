{
  "name": "@vaadin-component-factory/vcf-element",
  "version": "1.0.0",
  "description": "--elementdescription--",
  "main": "dist/vcf-element.js",
  "module": "dist/vcf-element.js",
  "type": "module",
  "author": "Vaadin Ltd",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vaadin-component-factory/vcf-element.git"
  },
  "keywords": [
    "lit-element",
    "vaadin",
    "vaadin-component-factory",
    "web-component"
  ],
  "scripts": {
    "analyze": "cem analyze --globs \"src/**/*.ts\" --outdir demo",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "format": "run-s format:**",
    "format:eslint": "eslint --ext .ts,.html . --fix --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" \"**/*.ts\" --write --ignore-path .gitignore",
    "lint": "run-s lint:**",
    "lint:eslint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" \"**/*.ts\" --check --ignore-path .gitignore",
    "postinstall": "node util/init.js",
    "prepublish": "tsc",
    "prestart": "npm run analyze",
    "publish": "node util/publish.js",
    "start": "run-p build:watch start:dev",
    "start:dev": "wds --app-index demo/index.html --node-resolve --open --watch",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\""
  },
  "dependencies": {
    "@vaadin/vaadin-lumo-styles": "^23.2.8",
    "@vaadin/vaadin-themable-mixin": "^23.2.8",
    "lit": "^2.4.1"
  },
  "devDependencies": {
    "@api-viewer/demo": "^1.0.0-pre.6",
    "@api-viewer/docs": "^1.0.0-pre.6",
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/eslint-config": "^8.0.2",
    "@open-wc/testing": "^3.1.6",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "@vaadin-component-factory/vcf-anchor-nav": "^23.2.0",
    "@vaadin-component-factory/vcf-element-util": "^0.3.0",
    "@web/dev-server": "^0.1.34",
    "@web/test-runner": "^0.14.0",
    "@webcomponents/webcomponentsjs": "^2.7.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2"
  },
  "customElements": "demo/custom-elements.json",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-extraneous-dependencies": "off",
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
